{
  "manifest_version": 3,
  "name": "Sakura",
  "version": "1.0.0",
  "description": "A Chrome extension powered by Vite.",
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle the overlay"
    }
  }
}
